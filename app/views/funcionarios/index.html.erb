<h1 class="text-center">Todos os Funcionarios</h1>

<p>
  <%= link_to 'Novo Funcionario', new_funcionario_path, class:"btn" %>
</p>

<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Codigo</th>
    <th>Nome</th>
    <th>Email</th>
    <th>Funcao</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @funcionarios.each do |funcionario| %>
  <tr>
    <td><%= funcionario.codigo %></td>
    <td><%= funcionario.nome %></td>
    <td><%= funcionario.email %></td>
    <td><%= funcionario.funcao %></td>
    <td><%= link_to 'Visualizar', funcionario, class:"btn btn-primary" %></td>
    <td><%= link_to 'Editar', edit_funcionario_path(funcionario), class:"btn btn-warning" %></td>
    <td><%= link_to 'Apagar', funcionario, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
  </tr>
<% end %>
</tbody>
</table>
