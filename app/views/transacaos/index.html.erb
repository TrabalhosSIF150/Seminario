<h1 class="text-center">Todas as Transações</h1>

<br />

<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Codigo</th>
    <th>Tipo</th>
    <th>Conta Origem</th>
    <th>Conta Destino</th>
    <th>Valor</th>
    <th>Data</th>
  </tr>
  </thead>

  <tbody>
<% @transacaos.each do |transacao| %>
  <tr>
    <td><%= transacao.codigo %></td>
    <td><%= transacao.tipo %></td>
    <td><%= transacao.nro_conta %></td>
    <td><%= transacao.nro_conta_transf %></td>
    <td><%= transacao.valor %></td>
    <td><%= transacao.data.strftime("%d/%m/%y") %></td>
  </tr>
<% end %>
</tbody>
</table>